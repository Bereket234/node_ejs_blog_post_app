<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/header.ejs')%>


    <main>
        <% if(blogs.length > 0){%>
            <% blogs.map( blog=> {%>
                <a href= "/blogs/<%= blog._id %>">
                    <div class="blog_container">
                        <div class="title_containter">
                            <p class="blog_title">
                                <%= blog.title%>
                            </p>
                        </div>
                        <div class="highlights_container">
                            <p class="highlight">
                                <%= blog.highlight%>
                            </p>
                        </div>
                </a>
                </div>
        <%})}%>
    </main>


    <%- include('./partials/footer.ejs')%>
    
</body>
</html>